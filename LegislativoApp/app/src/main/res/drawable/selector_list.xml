<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <objectAnimator
            android:propertyName="translationZ"
            android:valueTo="5dp"/>
    </item>

    <item android:state_pressed="false">
        <objectAnimator
            android:propertyName="translationZ"
            android:valueTo="0dp"/>
    </item>

</selector>