<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/developers_list_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    android:paddingBottom="10dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="100dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="80dp">

        <ImageView
            android:id="@+id/larissaFoto"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:padding="5dp"
            android:src="@drawable/larissa_perfil2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/nomeDev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="Larissa Cardoso Zimmermann"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/profissaoDev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="Engenheira de Computação, formada pela USP"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/contatoDev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="larissacazi91@gmail.com"
                android:textColor="@color/colorBlack" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/gabrielFoto"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:padding="15dp"
            android:src="@drawable/gabriel_perfil" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/gabrielDev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="Gabriel Martins da Silva"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/gabrielProfissao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="Futuro Engenheiro de Computação - USP"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/gabrielEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="gms.1997@hotmail.com"
                android:textColor="@color/colorBlack" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>