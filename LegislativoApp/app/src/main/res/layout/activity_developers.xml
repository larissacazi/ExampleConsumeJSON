<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="zimmermann.larissa.legislativoapp.PropDetailsActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/dev_toolbar"
            app:title="@string/developers_title"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="60dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical"
                android:background="@drawable/border_top_bottom">

                <ImageView
                    android:id="@+id/larissaFoto"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/larissa_perfil2" />

                <TextView
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Larissa Cardoso Zimmermann"/>

                <TextView
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textSize="16sp"
                    android:padding="2dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:text="Engenheira de Computação, USP."/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical"
                android:background="@drawable/border_top_bottom">

                <ImageView
                    android:id="@+id/gabrielFoto"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:padding="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/gabriel_perfil" />

                <TextView
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Gabriel Martins da Silva"/>

                <TextView
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textSize="16sp"
                    android:padding="2dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:text="Estudante de Engenharia de Computação, USP."/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical"
                android:background="@drawable/border_top_bottom">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:padding="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/renan" />

                <TextView
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Renan Bevilacqua Melki"/>

                <TextView
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textSize="16sp"
                    android:padding="2dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:text="Estudante de Designer Gráfico, UAM."/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical"
                android:background="@drawable/border_top_bottom">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:padding="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/mariana" />

                <TextView
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Mariana Cardoso Zimmermann"/>

                <TextView
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textSize="16sp"
                    android:padding="2dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:text="Advogada, USP."/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</android.support.design.widget.CoordinatorLayout>